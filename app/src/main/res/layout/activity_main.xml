<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels_eberhard_grossgasteiger_1624438"
    tools:context=".ui.MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#F44336"
        android:clickable="true"
        android:focusable="true"
        android:onClick="accionCrearEntrenamiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@drawable/add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="#e0e0e0"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pexels_sasha_martynov_1260727"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tvNombre_SheredPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/nombreSheredPreferences"
                    android:textColor="#020202"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tvApellido_SheredPreferences"
                    app:layout_constraintEnd_toStartOf="@+id/edNombreSheredPreferences"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edNombreSheredPreferences"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="24dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:hint="@string/edNombreHint"
                    android:inputType="textPersonName"
                    android:textColor="#020202"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/edApellido1_SheredPreferences"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.163"
                    app:layout_constraintStart_toEndOf="@+id/tvNombre_SheredPreferences"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvApellido_SheredPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/tvApellido_SheredPreferences"
                    android:textColor="#020202"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tvApellido2_SheredPreferences"
                    app:layout_constraintEnd_toStartOf="@+id/edApellido1_SheredPreferences"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNombre_SheredPreferences" />

                <EditText
                    android:id="@+id/edApellido1_SheredPreferences"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:hint="@string/edPrimer_apellidoHint"
                    android:inputType="textPersonName"
                    android:textColor="#020202"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/edApellido2_SheredPreferences"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvApellido_SheredPreferences"
                    app:layout_constraintTop_toBottomOf="@+id/edNombreSheredPreferences" />

                <TextView
                    android:id="@+id/tvApellido2_SheredPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/tvApellido2_SheredPreferences"
                    android:textColor="#020202"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toStartOf="@+id/edApellido2_SheredPreferences"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvApellido_SheredPreferences" />

                <EditText
                    android:id="@+id/edApellido2_SheredPreferences"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:hint="@string/edSegundo_apellidoHint"
                    android:inputType="textPersonName"
                    android:textColor="#020202"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvApellido2_SheredPreferences"
                    app:layout_constraintTop_toBottomOf="@+id/edApellido1_SheredPreferences" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edApellido2_SheredPreferences">

                    <TextView
                        android:id="@+id/tvEdad_SheredPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="@string/tvEdad_SheredPreferences"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/amaranth"
                        android:hint="@string/edEdad_SheredPrefferences"
                        android:inputType="number"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvAnhos_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/tvEdad_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAnhos_SheredPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="@string/tvAnhos_SheredPreferences"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvAltura_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAltura_SheredPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/amaranth"
                        android:text="@string/tvAltura_SheredPreferences"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/edAltura_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/tvAnhos_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMetreos_SheredPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/amaranth"
                        android:text="@string/tvMetros_SheredPreferences"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvPeso_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/edAltura_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPeso_SheredPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/amaranth"
                        android:text="@string/edPesoHint"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/edPeso_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/tvMetreos_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.428" />

                    <EditText
                        android:id="@+id/edAltura_SheredPreferences"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/amaranth"
                        android:hint="@string/edAlturaHint"
                        android:inputType="numberDecimal"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvMetreos_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/tvAltura_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edPeso_SheredPreferences"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/amaranth"
                        android:hint="@string/edPesoHint"
                        android:inputType="numberDecimal"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvKg_SheredPreferences"
                        app:layout_constraintStart_toEndOf="@+id/tvPeso_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tvKg_SheredPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="@string/tvKg_SheredPreferences"
                        android:textColor="#020202"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/edPeso_SheredPreferences"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEntrenamientos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>